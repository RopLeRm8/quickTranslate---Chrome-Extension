{
  "manifest_version": 2,
  "name": "quickTranslate",
  "description": "Translate text quickly",
  "version": "1.0",
  "permissions": ["tabs","storage","contextMenus", "activeTab", "https://google-translate1.p.rapidapi.com/*","*://*/*"],
  "icons": {
    "16": "images/icons/icon16.png",
    "32": "images/icons/icon32.png",
    "48": "images/icons/icon48.png",
    "128": "images/icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["extension/script/main.js"]
    }
    
  ],
  "browser_action": {
    "default_title": "Translate selected text",
    "default_popup": "extension/popup/popup.html"
  },
  "background":{
    "scripts":["extension/background/dataHandling.js"]
  }
}